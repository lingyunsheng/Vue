/* pages/jifen/jifen.wxss */

page {}

.main {
    width: 100%;
    height: 400rpx;
    padding-top: 100rpx;
    background: red;
}

.jifen {
    background: transparent;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    vertical-align: middle;
}

h1 {
    color: #fff;
    font-size: 28rpx;
}

.jifen text {
    color: #fff;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.jifen button {
    width: 250rpx;
    height: 50rpx;
    background-color: red;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    border-radius: 4rpx solid red;
    margin-top: 20rpx;
}

.jifen_wrap {
    width: 100%;
    background: #fff;
    border-bottom: 4rpx solid #eee;
}

.nav {
    white-space: nowrap;
}

.jifen_nav {
    display: inline;
    color: #eee;
    font-size: 36rpx;
    padding: 20rpx 30rpx;
    line-height: 80rpx;
    height: 80rpx;
}

.jifen_nav.active {
    color: #000;
    border-bottom: 4rpx solid yellowgreen;
}

.jilu {
    width: 100%;
    height: 150rpx;
    line-height: 150rpx;
    background: #fff;
    border-bottom: 4rpx solid #666;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-left: 10px;
    padding-right: 10rpx;
}

.left {
    flex: 10;
}

.right {
    flex: 3;
}

.type {
    color: #000;
    font-size: 30rpx;
}

.date {
    color: #666;
    font-size: 24rpx;
}

.count {
    color: red;
    font-size: 28rpx;
}